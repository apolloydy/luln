{
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "indentation": null,
      "selector-class-pattern": null,
      "keyframes-name-pattern": null,
      "no-duplicate-selectors": null,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "layer",
            "config"
          ]
        }
      ]
    }
  }